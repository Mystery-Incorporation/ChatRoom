        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Server"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnStartServer" Content="Start Server" HorizontalAlignment="Left" Margin="44,329,0,0" VerticalAlignment="Top" Width="75" Click="btnStartServer_Click"/>
        <Button x:Name="btnStopServer" Content="Stop Server" HorizontalAlignment="Left" Margin="44,368,0,0" VerticalAlignment="Top" Width="75" Click="btnStopServer_Click"/>
        <Button x:Name="btnSendAll" Content="Send To All" HorizontalAlignment="Left" Margin="197,348,0,0" VerticalAlignment="Top" Width="100" Height="40" Click="btnSendAll_Click"/>
        <TextBox x:Name="txtMessage" HorizontalAlignment="Left" Height="40" Margin="317,348,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="425"/>

    </Grid>
</Window>
