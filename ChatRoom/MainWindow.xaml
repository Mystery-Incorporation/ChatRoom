<Window x:Class="ChatRoom.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatRoom"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="Btn_Connect" Height="50" Content="Connect to Server" Margin="321,34,366,335" Click="btn_connect_click" />
        <TextBox x:Name="serverBox" Width="400" Height="200"/>

        <TextBox x:Name="clientBox" Width="300" Height="100" Margin="0,300,0,0"></TextBox>
        <Button x:Name="Btn_Send" Width="50" Height="50" Content="send" Margin="400,300,0,0" Click="btn_send_click" />
    </Grid>
</Window>
